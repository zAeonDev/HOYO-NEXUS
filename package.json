{
  "name": "hoyo-nexus",
  "version": "1.0.1",
  "description": "HOYO NEXUS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "dotenv -e .env -- electron-builder --publish=always"
  },
  "author": "Aeon",
  "license": "MIT",
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "asar": true,
    "appId": "hoyo-nexus",
    "productName": "HOYO NEXUS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "icon.ico",
      "settings.json",
      "src/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "zAeonDev",
        "repo": "HOYO-NEXUS"
      }
    ]
  },
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.5.0",
    "cross-fetch": "^4.1.0",
    "electron-updater": "^6.3.9"
  }
}